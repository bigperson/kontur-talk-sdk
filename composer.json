{
    "name": "bigperson/kontur-talk-sdk",
    "description": "PHP SDK для работы с API Kontur.Talk",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Anton Kartsev",
            "email": "anton@alarmcrm.ru"
        }
    ],
    "require": {
        "php": ">=8.2",
        "guzzlehttp/guzzle": "^7.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Kontur\\Talk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kontur\\Talk\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "phpstan": "phpstan analyse"
    },
    "config": {
        "sort-packages": true
    }
} 